// Colors
$accentColor = #b071e3
$accentColorSecondary = #eb6cad
$textColor = $lighttextColor
$borderColor = $lightborderColor
$codeBgColor = #282c34
$arrowBgColor = #ccc
$badgeTipColor = $accentColor
$badgeWarningColor = darken(#ffe564, 35%)
$badgeErrorColor = #DA5961
$badgeVersionColor = #000000
$backgroundColor = $lightbackgroundColor
$backgroundColorSecondary = $lightbackgroundColorSecondary
$containerBackground = $lightcontainerBackground
$navbarColor = $lightnavbarColor

// Lightmode scheme
$lighttextColor = #2c3e50
$lightborderColor = #eaecef
$lightbadgeVersionColor = #000000
$lightbackgroundColor = #fcfcff
$lightbackgroundColorSecondary = #FFFFFF
$lightcontainerBackground = #f8e6ff
