// Layout
$navbarHeight = 3.6rem
$sidebarWidth = 20rem
$contentWidth = 46.25rem
$homePageWidth = 70rem
$heroImageHeight = 8rem
$containerBorderRadius = 0.4rem
$buttonBorderRadius = 0.25rem

// Responsive breakpoints
$MQNarrow = 959px
$MQMobile = 767px
$MQMobileNarrow = 419px

// Fonts
$fontButton = "Open Sans", Roboto, -apple-system, BlinkMacSystemFont, Segoe UI, Oxygen, Ubuntu, Cantarell, Fira Sans, Droid Sans, Helvetica Neue, sans-serif
$fontCode = source-code-pro, Menlo, Monaco, Consolas, "Courier New", monospace

// Custom blocks
$customTip = #184cef
$customWarning = #e8c82a
$customDanger = #e5422b

// Social
$emailAccentColor = #D44638
$facebookAccentColor = #3B5998
$instagramAccentColor = #FF2e66
$telegramAccentColor = #0088CC
$gitlabAccentColor = #FC6D27
$redditAccentColor = #FF5700
$githubAccentColor = $githubLightAccentColor
$githubLightAccentColor = #000000
